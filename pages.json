							"backgroundColor": "#F0F1F2",
							"placeholderColor": "#979C9D", //提示字体颜色
							"disabled": true //禁止输入，点击进入新搜索页面
						}
						// #ifdef APP-PLUS
						,
						"buttons": [ //按钮 扫一扫,只有app才有， 注意最前面放逗号,
							{
								
								"float": "right",
								"fontSize": "27",
								
								"background": "rgba(0,0,0,0)",
								"fontSrc": "/static/icon/iconfont.ttf",
								"text": "\ue689"
							}
						]
						// #endif

					}
				}
			}

		},
		{
			"path": "pages/user/user"

		},
		
